script/source = "extends KinematicBody2D

signal died

const MOVE_SPEED = 700
const JUMP_FORCE = 1400
const GRAVITY = 70
const MAX_FALL_SPEED = 100
 
onready var sprite = $Sprite
 
var y_velo = 0
var facing_right = false


func _process(_delta):
	var move_dir = 0
	if Input.is_action_pressed(\"move_right\"):
		move_dir += 1
	if Input.is_action_pressed(\"move_left\"):
		move_dir -= 1
		
	var grounded = is_on_floor()
	
	y_velo += GRAVITY
	if grounded and y_velo >= 5:
			y_velo = 5
			
	if grounded and Input.is_action_pressed(\"jump\"):
		y_velo = -JUMP_FORCE
		if y_velo > MAX_FALL_SPEED:
			y_velo = MAX_FALL_SPEED
	if facing_right and move_dir < 0:
		flip()
	if !facing_right and move_dir > 0:
		flip()
	
	move_and_slide(Vector2(move_dir * MOVE_SPEED, y_velo), Vector2(0, -1))
	collision()

func flip():
	facing_right = !facing_right
	sprite.flip_h = !sprite.flip_h

func collision():
	# Body collision
	for i in range(get_slide_count() ):
		var collision = get_slide_collision(i)
		if collision:
			if collision.collider.is_in_group(\"bounce\"):
				bounce()
			if collision.collider.is_in_group(\"bad\"):
				die()
			

func bounce():
	y_velo = -JUMP_FORCE * 1.5

func die():
	emit_signal(\"died\")
"

